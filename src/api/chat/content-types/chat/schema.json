{
  "kind": "collectionType",
  "collectionName": "chats",
  "info": {
    "singularName": "chat",
    "pluralName": "chats",
    "displayName": "Chat"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "buyer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "buyer_chats"
    },
    "seller": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "seller_chats"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "chats"
    },
    "chat_status": {
      "type": "enumeration",
      "default": "active",
      "enum": [
        "active",
        "closed",
        "blocked"
      ]
    },
    "last_message_at": {
      "type": "datetime"
    },
    "chat_meta": {
      "type": "json"
    },
    "chat_messages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::chat-message.chat-message",
      "mappedBy": "chat"
    }
  }
}
